    ],
    "schedule": "Minggu, Senin, Jumat | 13.00 - 19.00"
  },
  {
    "name": "Drg. Lina Kurnia, Sp.Ort",
    "specialty": "Spesialis Ortodonti",
    "experience": "7 Tahun Pengalaman",
    "services": [
      "Kawat Gigi",
      "Aligner Bening",
      "Koreksi Perataan Gigi"
    ],
